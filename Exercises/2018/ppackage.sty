\newcommand{\makeheader}{
	\begin{tabular}{@{}ll}
		\ifdefined\@institute
			\@institute \\
		\fi
		\ifdefined\@faculty
			\@faculty
		\fi
	\end{tabular} \hfill
	\ifdefined\@publishdate
		\@publishdate
	\fi

	\framebox[\textwidth]{\hspace{10pt}
		\addtolength{\textwidth}{-20pt}
		\begin{minipage}{\textwidth}
			\ifdefined\@lecture\textbf{\@lecture}\fi % lecture
			\ifdefined\@term~(\@term)\fi % term
			\begin{center}\Large
				\ifdefined\@problemset\@problemset\fi % problem set
			\end{center}
			\ifdefined\@custominfo
				\@custominfo % custom info
			\else % this is the standart info
				\ifdefined\@duedate\@duedate  %\\ due date
				You are allowed to submit your solutions in groups of at most three students.
				\fi
			\fi
			\end{minipage}\hspace{10pt}
			}
		\addtolength{\textwidth}{20pt}
	\bigskip
}


